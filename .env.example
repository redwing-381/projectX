# ProjectX Environment Variables

# LLM Provider (OpenRouter recommended)
LLM_API_KEY=sk-or-v1-xxxxxxxxxxxxx
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=openai/gpt-4o-mini

# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Your keypad phone number (receives SMS alerts)
ALERT_PHONE_NUMBER=+1234567890

# Telegram Userbot (for monitoring personal messages)
# Get api_id and api_hash from https://my.telegram.org/apps
TELEGRAM_API_ID=your-api-id
TELEGRAM_API_HASH=your-api-hash
TELEGRAM_SESSION=  # Generated by running: python scripts/generate_telegram_session.py

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/projectx

# App Settings
DEBUG=false
